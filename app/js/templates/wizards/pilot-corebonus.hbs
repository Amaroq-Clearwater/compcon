{{#items}}
<tr>
  <td style="padding-bottom: 5px; ">
    <div class="menu-border equip-expander">
      <div class="equip-expander-header sweep-btn" style="text-align:center;" data-item="{{id}}">
        <span><b>{{name}}</b>&emsp;<span class="subtitle pull-right">{{source}}</span></span>
      </div>
      <div class="equip-open-info hidden" style="background-color: var(--bg);">
        <div style="padding-left:5px">
        {{#if description}}
          <blockquote class="desc-text">{{{description}}}<br></blockquote>
        {{/if}}
        {{#if effect}}
          <span>{{effect}}<br></span>
        {{/if}}
      </div>
    </div>
  </td>
  <td style="vertical-align: top" width="24px;">
    <div class="pilot-gear-btn" data-item="{{id}}" data-item-name="{{name}}">
      <span class="pull-right add-button">
        <a href="#" data-balloon-length="small" data-balloon="Add Item" data-balloon-pos="left">+</a>
      </span>
      <span class="pull-right subtract-button" style="display: none;" data-item="{{id}}">
        <a href="#" data-balloon-length="medium" data-balloon="Remove Item" data-balloon-pos="left">-</a>
      </span>
    </div>
  </td>
</tr>
{{/items}}