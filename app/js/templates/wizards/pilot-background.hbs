{{#backgrounds}}
  <div class="equip-expander">
    <div class="equip-expander-header bg-selector wizard-selector-header" data-name="{{name}}" data-id="{{id}}">
      <span class="">{{name}}</span>
      <br>
      <span class="subtitle">{{listArray skills}}</span>
    </div>
    <div class="equip-open-info hidden" style="background-color: var(--bg);">
      <div style="padding-left:5px">
        <blockquote class="desc-text">{{{description}}}</blockquote>
      </div>
    </div>
  </div>
{{/backgrounds}}