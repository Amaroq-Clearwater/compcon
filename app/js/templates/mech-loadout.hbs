<div style="padding: 10px;">
  <span class="title">LOADOUT</span>
  <table class="equipment-table">
    {{#mounts}}
    <tr>
      {{#if specialMount}}
        <td width="20%">
          <div class="ult-btn warning-stripes">{{allCaps specialMount}}</div>
        </td>
      {{else}}
        <td width="20%">
          <div class="{{#if sh_lock}}ult-btn warning-stripes{{else}}btn mount-btn{{/if}}" data-mount-idx='{{mount_index}}'>{{allCaps mount}} MOUNT</div>
        </td>
      {{/if}}
      <td class="menu-border equip-expander">
        {{#if sh_lock}}
          <div class="subtitle">&nbsp;// Mount Locked: Superheavy Weapon Support //</div>
        {{else}}
          {{#if weapon}}
              <div class="equip-expander-header sweep-btn">&nbsp;{{weapon.name}}
                <span class="subtitle">({{weapon.source}})</span>
                {{#if weapon.sp}}<span class="pull-right subtitle">{{weapon.sp}} SP</span>{{/if}}
                {{#if modSP}}<span class="pull-right subtitle">{{modSP}} SP (MOD)</span>{{/if}}
              </div>
            <div class="equip-open-info hidden">
              <div style="padding-left:5px">
                {{#if weapon.description}}<blockquote class="desc-text">{{{weapon.description}}}</blockquote>{{/if}}
                {{#if weapon.effect}}<span>{{{weapon.effect}}}<br></span>{{/if}}
                {{#mods}}
                  <hr class="mg-10">
                  <div class="mg-10">
                    <span><b>{{name}}</b><span class="subtitle">&nbsp;({{modType}})</span></span>
                    <span class="subtitle"><br>{{mod.sp}} SP</span>
                    {{#if description}}<blockquote class="desc-text">{{{description}}}</blockquote>{{/if}}
                    {{#if effect}}<span>{{{effect}}}</span>{{/if}}
                  </div>
                  <hr class="mg-10">
                {{/mods}}
                <span class="subtitle">{{weapon.mount}} {{weapon.type}}</span>
                {{#if weapon.sp}}<span class="subtitle">{{weapon.sp}} SP </span>{{/if}}
                <table class="gear-table">
                  <tr>
                    <th>Range</th>
                    <th>Damage</th>
                  <tr>
                    <td>{{weapon.range}}</td>
                    <td>{{{dmgFormat weapon.damage}}}<br><span class="subtitle">{{dmgRange weapon.damage}}</span></td>
                </table>
                <div class="tag-div">
                  {{#weapon.tags}}
                    <div class="tag">
                      <a href="#" data-balloon-length="{{balloonSize description}}" data-balloon="{{description}}" data-balloon-pos="up">{{name}}</a>
                    </div>
                  {{/weapon.tags}}
                </div>
              </div>
            </div>
          {{else}}
            <div class="subtitle">&nbsp;// EMPTY //</div>
          {{/if}}
        {{/if}}
      </td>
    </tr>
    {{/mounts}}
    <tr>
      <td width="20%">
        <div class="ult-btn warning-stripes">ULTIMATE - PASSIVE</div>
      </td>
      <td class="menu-border equip-expander">
        <div class="equip-expander-header sweep-btn">&nbsp;{{shell.ult_name}}</div>
        <div class="equip-open-info hidden">
          <div style="padding-left:5px">
            {{#if shell.ult_description}}
            <blockquote class="desc-text">{{{shell.ult_description}}}</blockquote>
            {{/if}}
            <span>{{{shell.ult_passive}}}</span>
          </div>
        </div>
      </td>
    </tr>
    <tr>
      <td width="20%">
        <div class="ult-btn warning-stripes">ULTIMATE - ACTIVE</div>
      </td>
      <td class="menu-border equip-expander">
        <div class="equip-expander-header sweep-btn">&nbsp;{{shell.ult_active_name}}</div>
        <div class="equip-open-info hidden">
          <div style="padding-left:5px">
            <span class="ult-effect">{{{shell.ult_active}}}</span>
          </div>
        </div>
      </td>
    </tr>
    <tr>
      <td>&nbsp;</td>
      <td>&nbsp;</td>
    </tr>
    {{#systems}}
      <tr>
        {{#if specialMount}}
        <td width="20%">
            <div class="ult-btn warning-stripes">{{allCaps specialMount}}</div>
        </td>
        {{else}}
          <td width="20%">
            <div class="btn system-btn" data-system-idx='{{@index}}'>SYSTEM</div>
          </td>
        {{/if}}
        <td class="menu-border equip-expander">
          <div class="equip-expander-header sweep-btn">&nbsp;{{name}}
            <span class="subtitle">({{source}})</span>
            {{#if sp}}<span class="pull-right subtitle">{{sp}} SP</span>{{/if}}
          </div>
          <div class="equip-open-info hidden">
            <div style="padding-left:5px">
              {{#if description}}<blockquote class="desc-text">{{{description}}}</blockquote>{{/if}}
              <span>{{type}}</span>
              <span class="subtitle"><br>{{sp}} SP </span>
              {{#if effect}}<span><br>{{{effect}}}</span>{{/if}}
              {{#mods}}
                <hr class="mg-10">
                <div class="mg-10">
                  <span><b>{{name}}</b><span class="subtitle">&nbsp;({{modType}})</span></span>
                  <span class="subtitle"><br>{{mod.sp}} SP</span>
                  {{#if description}}<blockquote class="desc-text">{{{description}}}</blockquote>{{/if}}
                  {{#if effect}}<span>{{{effect}}}</span>{{/if}}
                </div>
                <hr class="mg-10">
              {{/mods}}
              <div class="tag-div">
                {{#tags}}
                <span class="tag"><a href="#" data-balloon-length="{{balloonSize description}}" data-balloon="{{description}}"
                    data-balloon-pos="up">{{name}}</a></span>
                {{/tags}}
              </div>
            </div>
          </div>
        </td>
      </tr>
    {{/systems}}
    {{#if sp.free}}
      <tr>
        <td width="20%">
          <div class="btn system-btn">SYSTEM</div>
        </td>
        <td class="menu-border equip-expander">
          <div class="subtitle">&nbsp;// EMPTY //</div>
        </td>
      </tr>
    {{/if}}
  </table>
  <table width="100%">
    <tr>
      <td width="66%">
        <span class="pull-right subtitle"><b>{{sp.free}}/{{sp.max}}</b>SP</span>
      </td>
    </tr>
  </table>
</div>