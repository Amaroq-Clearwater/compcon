{
  "name": "compcon",
  "version": "1.3.0",
  "author": "Massif Press",
  "description": "A digital toolkit for the LANCER TTRPG",
  "license": "GPL-3.0-or-later",
  "scripts": {
    "dev": "electron-webpack dev",
    "compile": "electron-webpack",
    "dist": "yarn compile && electron-builder",
    "lint": "eslint **/*.ts --ignore-pattern node_modules/",
    "dist:dir": "yarn dist --dir -c.compression=store -c.mac.identity=null"
  },
  "electronWebpack": {
    "title": "COMP/CON v1.3.0b",
    "whiteListedModules": [
      "vue",
      "vuetify"
    ]
  },
  "build": {
    "productName": "compcon",
    "appId": "com.jarena.compcon",
    "directories": {
      "output": "build"
    },
    "files": [
      "dist/main/**/*",
      "dist/renderer/**/*"
    ],
    "dmg": {
      "contents": [
        {
          "x": 410,
          "y": 150,
          "type": "link",
          "path": "/Applications"
        },
        {
          "x": 130,
          "y": 150,
          "type": "file"
        }
      ]
    },
    "mac": {
      "icon": "icons/icon.icns",
      "target": [
        "zip"
      ]
    },
    "win": {
      "icon": "icons/icon.ico",
      "target": [
        "portable"
      ]
    },
    "linux": {
      "icon": "icons",
      "target": [
        "AppImage"
      ],
      "category": "Game"
    }
  },
  "dependencies": {
    "@mdi/font": "^3.6.95",
    "@types/fs-extra": "^5.0.5",
    "@types/lodash": "^4.14.123",
    "electron-webpack-eslint": "^4.0.1",
    "eslint": "^5.16.0",
    "eslint-loader": "^2.1.2",
    "fs-extra": "^7.0.1",
    "lancer-data": "^1.8.52",
    "lodash": "^4.17.11",
    "material-icons": "^0.3.1",
    "source-map-support": "^0.5.10",
    "typeface-roboto": "^0.0.54",
    "vue-mousetrap": "^1.0.1",
    "vue-router": "^3.0.6",
    "vue2-scrollspy": "^2.3.1",
    "vuetify": "^1.5.13",
    "vuex": "^3.1.0",
    "vuex-electron": "^1.0.3",
    "xlsx": "^0.14.2"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^1.7.0",
    "@typescript-eslint/parser": "^1.7.0",
    "electron": "4.0.1",
    "electron-builder": "20.38.4",
    "electron-webpack": "^2.6.2",
    "electron-webpack-ts": "^3.1.1",
    "electron-webpack-vue": "^2.2.3",
    "eslint-plugin-html": "^5.0.3",
    "typescript": "^3.4.5",
    "vue": "^2.6.10",
    "webpack": "4.28.4"
  }
}
