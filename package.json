{
  "name": "compcon",
  "version": "2.0.0",
  "author": "Massif Press",
  "description": "A digital toolkit for the LANCER TTRPG",
  "license": "GPL-3.0-or-later",
  "scripts": {
    "dev": "webpack-dev-server --progress --env.platform=web",
    "build": "webpack --progress --env.platform=web --env.prod",
    "unit-test": "jest unit",
    "int-test": "jest int",
    "electron:dev": "webpack-dev-server --progress --env.platform=electron",
    "electron:build": "webpack --progress --env.platform=electron --env.prod && cd ./electron && electron-builder ./"
  },
  "build": {
    "productName": "COMP/CON",
    "appId": "com.massifpress.compcon",
    "mac": {
      "icon": "./icons/icon.icns",
      "hardenedRuntime": true,
      "entitlements": "./electron/entitlements.mac.inherit.plist",
      "target": [
        "zip"
      ]
    },
    "win": {
      "icon": "./icons/icon.ico",
      "target": [
        {
          "target": "portable",
          "arch": [
            "x64",
            "ia32"
          ]
        }
      ]
    },
    "linux": {
      "icon": "./icons",
      "target": [
        {
          "target": "AppImage"
        }
      ],
      "category": "Game"
    }
  },
  "dependencies": {
    "@aricchi/electron-vue-devtools": "^5.0.8-1",
    "@capacitor/cli": "^1.3.0",
    "@capacitor/core": "^1.3.0",
    "@mdi/font": "^3.6.95",
    "@types/fs-extra": "^5.0.5",
    "@types/lodash": "^4.14.123",
    "apexcharts": "^3.8.4",
    "axios": "^0.19.0",
    "css-loader": "^3.0.0",
    "electron-webpack-eslint": "^4.0.1",
    "eslint": "^5.16.0",
    "eslint-loader": "^2.1.2",
    "fs-extra": "^7.0.1",
    "lancer-data": "^2.0.0",
    "lodash": "^4.17.11",
    "material-icons": "^0.3.1",
    "source-map-support": "^0.5.10",
    "typeface-roboto": "^0.0.54",
    "typeit": "^6.0.3",
    "typograph": "^1.0.15",
    "vue-apexcharts": "^1.4.0",
    "vue-mousetrap": "^1.0.1",
    "vue-router": "^3.0.6",
    "vuedraggable": "^2.20.0",
    "vuetify": "^2.0.0-beta.9",
    "vuex": "^3.1.0",
    "vuex-electron": "^1.0.3",
    "vuex-module-decorators": "^0.10.1"
  },
  "devDependencies": {
    "@types/jest": "^24.0.13",
    "@typescript-eslint/eslint-plugin": "^1.7.0",
    "@typescript-eslint/parser": "^1.7.0",
    "circular-dependency-plugin": "^5.0.2",
    "clean-webpack-plugin": "^3.0.0",
    "copy-webpack-plugin": "^5.0.5",
    "core-js": "3",
    "electron": "4.0.1",
    "electron-builder": "^20.41.0",
    "electron-reload": "^1.5.0",
    "eslint-config-prettier": "^6.1.0",
    "eslint-plugin-html": "^5.0.3",
    "eslint-plugin-vue": "^5.2.3",
    "eslint-plugin-vuetify": "^1.0.0-beta.3",
    "favicons-webpack-plugin": "^1.0.2",
    "file-loader": "^5.0.2",
    "html-webpack-plugin": "^3.2.0",
    "jest": "^24.8.0",
    "jest-mock-random": "^1.0.2",
    "prettier": "^1.18.2",
    "pretty-quick": "^1.11.1",
    "raw-loader": "^4.0.0",
    "ts-jest": "^24.0.2",
    "typescript": "^3.4.5",
    "vue": "^2.6.10",
    "vue-loader": "^15.7.2",
    "vue-template-compiler": "^2.5.17",
    "webpack": "4.28.4",
    "webpack-cli": "^3.3.10",
    "webpack-inject-plugin": "^1.5.3",
    "webpack-merge": "^4.2.2",
    "webpack-pwa-manifest": "^4.1.1",
    "workbox-webpack-plugin": "^4.3.1",
    "write-file-webpack-plugin": "^4.5.1"
  }
}
